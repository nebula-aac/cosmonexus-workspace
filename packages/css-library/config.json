{
  "source": ["input/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "files": [{
        "destination": "build/js/tokens.js",
        "format": "javascript/es6"
      }, {
        "format": "typescript/es6-declarations",
        "destination": "build/js/tokens.d.ts"
      }]
    }
  }    
}
